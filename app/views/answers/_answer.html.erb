<% upvoted = answer[:"answer.upvoted_by"] && answer[:"answer.upvoted_by"].length == 1 %>

<li class="answer">
  <section class="body">
    <div class="actions">
      <%= link_to 'Remove', "/answers/#{answer[:_uid_]}?question_id=#{question[:_uid_]}", method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    <div class="upvote-count">
      <%= pluralize answer[:"upvote_count"], 'upvote' %>
      <% if !upvoted %>
        <%= link_to 'Upvote', "/answers/#{answer[:_uid_]}/upvotes", method: :post %>
      <% end %>
    </div>
    <%= answer[:"answer.body"] %>
  </section>
</li>
