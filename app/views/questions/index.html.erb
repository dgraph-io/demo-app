<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-12">
    <%= link_to 'New Question', new_question_path, class: 'btn btn-primary float-right' %>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-9">
    <div class="section-header">Hot questions</div>
    <ul class="questions list-unstyled">
      <% @questions.each do |question| %>
        <li class="question">
          <h2>
            <%= link_to question[:"question.title"], controller: 'questions', action: 'show', id: question[:_uid_] %>
          </h2>
          <p>
            <%= truncate question[:"question.body"], length: 300 %>
          </p>

          <div class="row">
            <div class="col-12 col-sm-3">
              <%= question[:"answer_count"] %> answers
            </div>
            <div class="col-12 col-sm-3">
              Asked by <span class="author-name"><%= question[:"question.written_by"][0][:user_name] %></span>
            </div>
            <div class="col-12 col-sm-3">
              On <span class="timestamp"><%= question[:"question.created_at"] %></span>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-3">
    <div class="section-header">
      Interacted questions
    </div>

    <ul>
      <% @interacted_questions.each do |question| %>
        <li>
          <%= link_to question[:"question.title"], controller: 'questions', action: 'show', id: question[:_uid_] %>
        </li>
      <% end %>
    </ul>

  </div>
</div>


<br>
